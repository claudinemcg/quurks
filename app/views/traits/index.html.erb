<div class="container">


<div class="container-fluid">
  <h2>All traits</h2>
  <div class="row">
    <% @traits.each do |trait| %>
      <div class="col col-md-3">
        <div class="card">
          <img class="card-img-top-4">
          <div class="card-body-4">
            <h5 class="card-title"><%= link_to trait.name, trait_path(trait), class: 'card-link' %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= link_to "Log Out",  destroy_user_session_path, method: :delete %>
</div>



