
<div class="container">
  <h1><%= @trait.name %> <span>by <%= @user.first_name %></span></h1>
  <div class="flex-container-trait">

    <div class="container-trait-description">
      <div>
        <p><%= @trait.description %></p>
      </div>

      <div class="book-trait-button">
        <button type="button" class="btn book-trait btn-lg">
          <%= link_to "Book this trait", new_trait_reservation_path(@trait) %>
        </button>
      </div>
    <!-- link to edit , delete, back to traits list -->
    </div>

      <div class="traits-image">
        <%= cl_image_tag @trait.photo.key, height: 411, width: 615, crop: :fill %>
      </div>

  </div>

  <div class="container-fluid">
    <h2>Check other traits</h2>
    <div class="row">
      <% @traits.sample(4).each do |trait| %>
        <div class="col col-md-3">
          <div class="card-trait">
            <img class="card-img-top-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path trait.photo.key, height: 200, width: 300, crop: :fill %>')">
            <div class="card-body-4">
              <h5 class="card-title"><%= link_to trait.name, trait_path(trait), class: 'card-link' %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>


