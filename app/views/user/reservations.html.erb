<div class="reservation_user">
  <h1><%=current_user.first_name.capitalize%>, your reservations</h1>
  <div class="rec_yellow"></div>
  <div class="rec_pink"></div>
  <div class="rec_green"></div>
  <div class="circle_black"></div>
  <div class="rec_black"></div>
</div>
<div class="cards flex-column justify-content-between">
<% current_user.reservations.each do |reservation| %>
    <div class="card-reservation mb-4">
      <div class="card-reservation-infos ">
        <div>
          <h2><%= reservation.trait.name.capitalize  %></h2>
          <p><%= reservation.trait.description %></p>
          <div class="d-flex justify-content-end">
            <p>From:<span class="mr-4"> <%= reservation.start_date  %><p>
            <p>To:<span> <%= reservation.end_date  %><p>
          </div>
        </div>
         <div class="d-flex reservation_btns">
           <div class="back_yellow_btn ml-5">
            <p>
              <%= link_to "Back", profile_user_index_path %>
            </p>
          </div>
          <div class="edit_green_btn ml-5">
            <p><%= link_to "Edit",  edit_trait_reservation_path(reservation.trait, reservation) %></p>
          </div>
          <div class="delete_coral_btn ml-5">
            <p><%= link_to "Delete", reservation_path(reservation), method: :delete, data: {confirm: "are you sure?"}%></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
